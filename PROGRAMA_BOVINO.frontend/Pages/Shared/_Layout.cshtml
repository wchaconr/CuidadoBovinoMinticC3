<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROGRAMA_BOVINO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300&display=swap" rel="stylesheet">
        
</head>
<body>
    <header>
        <div class="header">
            <a href="#" class="btnMenu"><i class="fas fa-bars"></i></a>
            <h1>CUIDADO BOVINO</h1>
            <div class="optionsBar">
                <br>
                <p>Colombia</p>
                
                
            </div>

        </div>
        <nav>
            <ul>
                <li><a href="inicio"><img  src="https://cdn.icon-icons.com/icons2/1744/PNG/512/3643769-building-home-house-main-menu-start_113416.png"width="30"/> Inicio</a>

                <li class="principal">
    
                    <a href="#"><img  src="https://cdn.icon-icons.com/icons2/1446/PNG/512/22234cow_98756.png"width="30"/> Bovinos <span class="arrow"><i class="fas fa-angle-down"></i></span></a>
                    <ul>
                        <li><a href="aper_vacas"><i class="fa-duotone fa-cow"></i> Apertura de Bovinos</a></li>
                        <li><a href="lista_vacas"><i class="fa-solid fa-users-line"></i> Lista de Bovinos</a></li>
                    </ul>
                    
                    </li>
                <li class="principal">
    
                    <a href="#"><img src="https://cdn.icon-icons.com/icons2/624/PNG/512/Add_User-80_icon-icons.com_57380.png"width="30" /></i> Clientes <span class="arrow"><i class="fas fa-angle-down"></i></span></a>
                    <ul>
                        <li><a href="aper_propietario"><i class="fa-solid fa-user-plus"></i> Apertura de Clientes</a></li>
                        <li><a href="lista_propietario"><i class="fa-solid fa-users-line"></i> Lista de Clientes</a></li>
                    </ul>
                    
                    
                    </li>
                <li class="principal">
    
                    <a href="#"><img src="https://cdn.icon-icons.com/icons2/944/PNG/512/medical-29_icon-icons.com_73943.png"width="30" /> Veterinarios <span class="arrow"><i class="fas fa-angle-down"></i></span></a>
                    <ul>
                        <li><a href="aper_veterinario"><i class="fa-solid fa-user-plus"></i> Apertura de Veterinarios</a></li>
                        <li><a href="lista_veterinario"><i class="fa-solid fa-users-line"></i> Lista de Veterinarios</a></li>
                    </ul>
                    
                    </li>
                <li class="principal">
    
                    <a href="#"><img src="https://cdn.icon-icons.com/icons2/2328/PNG/512/virus_medical_records_diagnosis_document_icon_142217.png"width="30" /> Visitas <span class="arrow"><i class="fas fa-angle-down"></i></span></a>
                    <ul>
                        <li><a href="visitas"><i class="fa-solid fa-user-plus"></i> Apertura de Visitas</a></li>
                        <li><a href="lista_visitas"><i class="fa-solid fa-users-line"></i> Lista de Visitas</a></li>
                    </ul>
                
                </li>
                
                

            </ul>

        </nav>
    </header>
    <div class="modal">
        <div class="bodyModal">
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - PROGRAMA_BOVINO - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>